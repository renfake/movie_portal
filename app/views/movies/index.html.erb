<div id="content-header">
  <h1>电影</h1>

  <div class="btn-group">
    <%= link_to new_movie_path, :class => 'btn btn-mini btn-info tip-bottom', :title => '新建电影' do %>
        <i class="icon-plus icon-white"></i>
    <% end %>
  </div>
</div>

<div class="container-fluid" style="background: white; height: 100%;">
  <div class="row-fluid">
    <div class="span12">
      <table class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>片名</th>
          <th>出品国家</th>
          <th>片种</th>
          <th>出品单位</th>
          <th>出品年份</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% @movies.each do |movie| %>
            <tr>
              <td><%= movie.name %></td>
              <td><%= movie.country %></td>
              <td><%= movie.category ? movie.category.name : '' %></td>
              <td></td>
              <td><%= movie.production_date %></td>
              <td><a href="/scores/new?id=<%=movie.id%>">评分</a> &nbsp; <a href="#">结果</a></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>